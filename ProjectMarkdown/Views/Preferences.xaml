<Window x:Class="ProjectMarkdown.Views.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMarkdown.Views"
        xmlns:viewModels="clr-namespace:ProjectMarkdown.ViewModels"
        mc:Ignorable="d"
        Title="Preferences" Height="390" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Window.DataContext>
        <viewModels:PreferencesViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel LastChildFill="True" Grid.Row="0" Grid.Column="0" Margin="2">
                <GroupBox Header="Localization" DockPanel.Dock="Top">
                    <Grid Margin="5">
                        <ComboBox ItemsSource="{Binding Languages}"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Toolbar" DockPanel.Dock="Top">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" MaxWidth="20" MinWidth="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding IsToolbarHidden}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Hide" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <RadioButton Grid.Row="1" Grid.Column="0" IsChecked="{Binding ToolbarHasSmallIcons}" GroupName="IconSizeGroup" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Small Icons" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <RadioButton Grid.Row="2" Grid.Column="0" IsChecked="{Binding ToolbarHasBigIcons}" GroupName="IconSizeGroup" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Big Icons" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Logging" DockPanel.Dock="Top">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Log Level" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Margin="2" ItemsSource="{Binding CurrentLogLevel}"/>
                        <TextBlock Text="Log File" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding LogFilePath}" Grid.Row="1" Grid.Column="1" Margin="2"/>
                        <Button Grid.Row="1" Grid.Column="2" Command="{Binding SelectLogFileCommand}" Margin="2">
                            <TextBlock Text="Browse..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Documents" DockPanel.Dock="Top">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Author" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBox Margin="2" Grid.Column="1" Text="{Binding Author}"/>
                    </Grid>
                </GroupBox>
                <Grid>

                </Grid>
            </DockPanel>
            <DockPanel LastChildFill="True" Grid.Row="0" Grid.Column="1" Margin="2">
                <GroupBox Header="Tab Bar" DockPanel.Dock="Top">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" MaxWidth="20" MinWidth="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding IsTabBarLocked}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Lock" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding IsDoubleClickToCloseDocument}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Double click to close document" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <CheckBox Grid.Row="2" Grid.Column="0" IsChecked="{Binding IsExitOnCloseTheLastTab}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Exit on close the last tab" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Theme" DockPanel.Dock="Top">
                    <Grid Margin="10">
                        <ComboBox ItemsSource="{Binding Themes}"></ComboBox>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Editor" DockPanel.Dock="Top">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" MaxWidth="20" MinWidth="20"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding IsWordWrap}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Word Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding IsSyncTextAndHtml}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Sync text editor and HTML view in real time" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="1" Margin="0,2,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Font" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding Fonts}" Grid.Row="0" Grid.Column="1" Margin="2"/>
                            <TextBlock Text="Font Size" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding FontSizes}" Grid.Row="1" Grid.Column="1" Margin="2"/>
                        </Grid>
                    </Grid>
                </GroupBox>
                <Grid>
                    
                </Grid>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="4" Margin="2" Command="{Binding ClosePreferenceWindowCommand}">
                <TextBlock Text="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button Grid.Column="5" Margin="2" Command="{Binding SavePreferencesCommand}">
                <TextBlock Text="Apply" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
</Window>
